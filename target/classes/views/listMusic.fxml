                                <TableColumn fx:id="titreColumn" text="Titre"/> <!-- prefWidth="300.0"-->
                                <!--widthEcran - 1420-->
                                <TableColumn fx:id="artisteColumn" editable="false" sortable="false" text="Artiste(s)"/> <!-- prefWidth="500.0"-->
