<!-- APP MENU VIEW -->
<?import javafx.scene.control.*?>
<MenuBar xmlns:fx="http://javafx.com/fxml/1" id="menuBar" xmlns="http://javafx.com/javafx/8.0.121"
         stylesheets="/styles/style.css"
         fx:controller="controllers.MenuController">
    <menus>
        <Menu id="appMenu" mnemonicParsing="false" text="WebMusic">
            <items>
                <MenuItem id="appHomeItem" mnemonicParsing="false" onAction="#appHomeItemClicked"
                          text="Accueil"/>
                <MenuItem id="appCloseItem" mnemonicParsing="false" onAction="#appCloseItemClicked"
                          text="Fermer"/>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Musique">
            <items>
                <MenuItem id="listMusicItem" mnemonicParsing="false" text="Lister" onAction="#listMusicItemClicked"/>
                <MenuItem id="addMusicItem" mnemonicParsing="false" text="Ajouter" onAction="#addMusicItemClicked"/>
            </items>
        </Menu>
        <Menu id="albumMenu" mnemonicParsing="false" text="Album">
            <items>
                <MenuItem id="addAlbumItem" mnemonicParsing="false" onAction="#addAlbumItemClicked"
                          text="Ajouter"/>
                <MenuItem id="editAlbumItem" mnemonicParsing="false" onAction="#editAlbumItemClicked"
                          text="Éditer"/>
                <MenuItem id="deleteAlbumItem" mnemonicParsing="false" onAction="#deleteAlbumItemClicked"
                          text="Supprimer"/>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Artiste">
            <items>
                <MenuItem mnemonicParsing="false" text="Action 1"/>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Playlist">
            <items>
                <MenuItem mnemonicParsing="false" text="Action 1"/>
            </items>
        </Menu>
        <Menu id="helpMenu" mnemonicParsing="false" text="Aide">
            <items>
                <MenuItem id="aboutItem" mnemonicParsing="false" onAction="#aboutItemClicked" text="À propos"/>
            </items>
        </Menu>
    </menus>
</MenuBar>
